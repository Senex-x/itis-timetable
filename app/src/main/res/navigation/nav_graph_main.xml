<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/scheduleFragment">

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.senex.timetable.presentation.ui.schedule.ScheduleFragment"
        android:label="ScheduleContainerFragment"
        tools:layout="@layout/fragment_schedule" >
        <action
            android:id="@+id/action_scheduleFragment_to_groupsFragment"
            app:destination="@id/groupsFragment" />
        <action
            android:id="@+id/action_scheduleFragment_to_ordinarySubjectFragment"
            app:destination="@id/ordinarySubjectFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupsFragment"
        android:name="com.senex.timetable.presentation.ui.groups.GroupsFragment"
        android:label="fragment_groups"
        tools:layout="@layout/fragment_groups" >
        <action
            android:id="@+id/action_groupsFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
    </fragment>
    <fragment
        android:id="@+id/ordinarySubjectFragment"
        android:name="com.senex.timetable.presentation.ui.subject.OrdinarySubjectFragment"
        android:label="SubjectFragment"
        tools:layout="@layout/fragment_ordinary_subject">
        <argument
            android:name="subject_id"
            app:argType="long" />
        <action
            android:id="@+id/action_ordinarySubjectFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
    </fragment>
</navigation>